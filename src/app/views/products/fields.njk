<div class="item">
    <div>Categoria</div>
    <div>
        <select name="category_id">
            {% for category in categories %}}
            <option value="{{category.id}}"{% if products.category_id == category.id %}selected{% endif %}>
                {{category.name}}
            </option> 
            {% endfor %}           
        </select>
    </div>
</div>


<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" value="{{products.name}}">
    </div>
</div>

<div class="item">
    <div>Descrição</div>
    <div>
        <textarea name="description" >
            {{products.description}}
        </textarea>        
    </div>
</div>

{# Campo de foto #}


{# Faremos uma mascara de dinheiro #}
<div class="item">
    <div>Preço</div>
    <div>
        <input type="text" name="price" value="{{products.price}}">
    </div>

    {% if products.old_price %}
        <input type="hidden" name="old_price" value="products.old_price">
    {% endif %}
</div>

<div class="item">
    <div>Quantidade</div>
    <div>
        <input type="number" name="quantity" placeholder="Estoque disponível" value="{{products.quantity}}">
    </div>
</div>

{% if products.status %}
<div class="item">
    <div>Disponível ?</div>
    <div>
        <span><input type="radio" name="status" value="1" 
        {% if products.status == '1' %} checked {% endif %}>Sim
        </span>
        <span><input type="radio" name="status" value="0" 
        {% if products.status == '0'%} checked {% endif %}>Não
        </span>
    </div>
</div>
{% endif %}